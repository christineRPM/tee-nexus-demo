{
  "name": "nexus-logo-hunt-game",
  "description": "Cross-chain logo discovery game built on Nexus powered cross-chain messaging",
  "keywords": ["blockchain", "cross-chain", "nexus", "hyperlane", "ethereum", "arbitrum", "game"],
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "hardhat": "^2.26.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hyperlane-xyz/core": "^9.0.1",
    "@hyperlane-xyz/registry": "^19.4.0",
    "@hyperlane-xyz/sdk": "^15.0.0",
    "dotenv": "^17.2.0",
    "ethers": "^5.8.0"
  },
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy-logohuntgame.ts",
    "verify:sepolia": "hardhat run scripts/verify-logohuntgame.ts --network sepolia",
    "verify:arbitrumsepolia": "hardhat run scripts/verify-logohuntgame.ts --network arbitrumsepolia",
    "find-logo": "hardhat run scripts/find-logo.ts --network sepolia",
    "find-logo:sepolia": "hardhat run scripts/find-logo-sepolia.ts --network sepolia",
    "find-logo:arbitrum": "hardhat run scripts/find-logo-arbitrum.ts --network arbitrumsepolia",
    "find-logo-backend": "hardhat run scripts/find-logo-backend.ts",
    "check-counts": "hardhat run scripts/check-counts.ts",
    "deploy:mockclient": "hardhat run scripts/deploy-mockclients.ts",
    "verify:mockclient:sepolia": "hardhat run scripts/verify-mockclients.ts --network sepolia",
    "verify:mockclient:arbitrumsepolia": "hardhat run scripts/verify-mockclients.ts --network arbitrumsepolia",
    "send-message": "hardhat run scripts/send-message.ts --network sepolia",
    "install:deps": "npm install --legacy-peer-deps",
    "setup": "npm run install:deps && npm run compile"
  }
}
